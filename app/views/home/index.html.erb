<div class="container">
	<section id="appointment_panel">
		<div class="row appointment">
			<div class="col-sm-3">
				<div class="panel panel-default">
				  <div class="panel-body">
				   <h2 class="text-center">completed Appointment</h2>
				  </div>
				</div>
			</div>
			<div class="col-sm-3">
				<div class="panel panel-default">
				  <div class="panel-body">
					<h2 class="text-center">Missed Appointment</h2>
				  </div>
				</div>
			</div>
			<div class="col-sm-3">
				<div class="panel panel-default">
				  <div class="panel-body">
					<h2 class="text-center">Patients</h2>
				  </div>
				</div>
			</div>
			<div class="col-sm-3 appointment_command">
			<%= link_to 'Add Patient', patient_index_path, class: 'btn btn-primary btn-lg btn-block' %>
			<%= link_to 'Add Doctor', doctor_index_path, class: 'btn btn-primary btn-lg btn-block' %>
			<%= link_to 'Add Clinician', clinician_index_path, class: 'btn btn-primary btn-lg btn-block' %>
			<%= link_to 'Add Clinc', clinic_index_path, class: 'btn btn-primary btn-lg btn-block' %>
			</div>
		</div>
	</section>
	<section id="date_picker">
		<div class="row">
			<div class="text-center col-md-2 col-md-offset-5">
				<div class='input-group date' id='datetimepicker1'>
	                    <input type='text' class="form-control" />
	                    <span class="input-group-addon">
	                        <span class="glyphicon glyphicon-calendar"></span>
	                    </span>
	            </div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<h4 class="text-center">Doctor 1</h4>
				<div style="overflow:hidden;">
				    <div class="form-group">
				        <div class="row">
				            <div class="col-md-12 main_calendar">
				                <div id="datetimepicker12"></div>
				            </div>
				        </div>
				    </div>
				    <script type="text/javascript">
				        $(function () {
				            $('#datetimepicker12').datetimepicker({
				                inline: true,
				                sideBySide: false
				            });
				        });
				    </script>
				</div>
			</div>
			<div class="col-sm-4">
				<h4 class="text-center">Doctor 2</h4>
				<div style="overflow:hidden;">
				    <div class="form-group">
				        <div class="row">
				            <div class="col-md-12 main_calendar">
				                <div id="datetimepicker13"></div>
				            </div>
				        </div>
				    </div>
				    <script type="text/javascript">
				        $(function () {
				            $('#datetimepicker13').datetimepicker({
				                inline: true,
				                sideBySide: false
				            });
				        });
				    </script>
				</div>
			</div>
			<div class="col-sm-4">
				<h4 class="text-center">Doctor 3</h4>
				<div style="overflow:hidden;">
				    <div class="form-group">
				        <div class="row">
				            <div class="col-md-12 main_calendar">
				                <div id="datetimepicker14"></div>
				            </div>
				        </div>
				    </div>
				    <script type="text/javascript">
				        $(function () {
				            $('#datetimepicker14').datetimepicker({
				                inline: true,
				                sideBySide: false
				            });
				        });
				    </script>
				</div>
			</div>
		</div>
	</section>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Reports</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      		<div class="form-row row">
			    <div class="form-group col-sm-6 input_doctor_patient">
				    <label for="inputdoctor" class="col-sm-2 col-form-label">Doctor</label>
				    <div class="col-sm-9 pull-right">
				      <input type="text" class="form-control" id="inputdoctor">
				    </div>
				</div>
				<div class="form-group col-sm-6 input_doctor_patient">
				    <label for="inputpatient" class="col-sm-2 col-form-label">Patient</label>
				    <div class="col-sm-9 pull-right">
				      <input type="text" class="form-control" id="inputpatient">
				    </div>
				</div>
		  	</div>
		  	<!-- date -->
	  		<div class="form-inline form-group row form-calendar">
			    <div class="col-sm-6">
			        <div class="form-group form-inline ">
			            <label for="inputdate">Date</label>
			            <div class='input-group date col-sm-9 pull-right' id='datetimepicker8'>
			                <input type='text' id="inputdate" class="form-control" />
			                <span class="input-group-addon">
			                    <span class="glyphicon glyphicon-calendar">
			                    </span>
			                </span>
			            </div>
			        </div>
			    </div>
			    <div class='col-sm-6'>
			            <div class="form-group form-inline">
			                <label for="inputtime">Time</label>
			                <div class='input-group date col-sm-9 pull-right' id='datetimepicker3'>
			                    <input type='text' id="inputtime" class="form-control" />
			                    <span class="input-group-addon">
			                        <span class="glyphicon glyphicon-time"></span>
			                    </span>
			                </div>
			            </div>
			    </div>
	  		</div>
	  		<div class="form-group row ">
			    <label for="appointement_type" class="col-sm-4 col-form-label">Appointment Type</label>
			    <div class="col-sm-8 pull-right">
			     	<select id="appointement_type" class="form-control">
				        <option selected>Initial Consult</option>
				        <option>Initial Consult2</option>
			      	</select>
			    </div>
			</div>
			<div class="form-group row">
			    <label for="appointement_type" class="col-sm-2 col-form-label">Note</label>
			    <div class="col-sm-10">
			     	<textarea class="form-control" rows="3"></textarea>
			    </div>
			</div>
		    <script type="text/javascript">
		        $(function () {
		            $('#datetimepicker8').datetimepicker({
		                icons: {
		                    time: "fa fa-clock-o",
		                    date: "fa glyphicon-calendar",
		                    up: "fa fa-arrow-up",
		                    down: "fa fa-arrow-down"
		                }
		            });
		        });
		        $(function () {
		                $('#datetimepicker3').datetimepicker({
		                    format: 'LT'
		                });
		            });
		    </script>
		  	<!-- end date -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
		<button type="button" class="btn btn-primary pull-right">Enter Waiting Room</button>
      </div>
    </div>
  </div>
</div>