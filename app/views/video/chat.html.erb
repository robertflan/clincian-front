<% provide(:title, "Chat") %>
<div class="container">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="panel panel-default">
		  	<div class="panel-body person_info">
		  		<%= image_tag 'man.png',alt:'man', class: 'man-icon'%>
		  		<div class="block">
					<%= image_tag 'video-icon.png',class: 'video-icon' %>
					<%= link_to 'End Call', root_path %>
